<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99dd76"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sxn_background">
        <Button
            android:id="@+id/sxn_motto_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/sxn_back">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:text="座右铭"
            android:textColor="@color/sxn_un_normal"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical">
    <EditText
        android:id="@+id/sxn_fixmotto_edit"
        android:layout_width="230dp"
        android:background="@drawable/sxn_edit1"
        android:layout_height="100dp"></EditText>
    <Button
        android:id="@+id/sxn_fixedmotto_btn"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="确认修改"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/sxn_un_normal"
        android:background="@drawable/sxn_btn"
        android:alpha="0.5"></Button>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LookUpAndErrorReDoActivity"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/title_ylx"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1AA8D7"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/img_ylx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/backylx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="错题集"/>
        <ImageView
            android:id="@+id/printer_ylx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:src="@mipmap/printerylx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/math_text_ylx"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="数学"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/tab_subject_background"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/chinese_text_ylx"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="语文"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/english_text_ylx"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="英语"
            android:textSize="25sp"
            android:gravity="center"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A9A9A9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:splitMotionEvents="false">
        <LinearLayout
            android:id="@+id/choose_one_ylx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="65dp"
                >
                <ImageView
                    android:id="@+id/leaf_one_ylx"
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/leafylx"
                    android:rotation="45"/>
                <TextView
                    android:id="@+id/left_one_text_ylx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textColor="#fff"
                    android:text="集合"
                    android:textSize="18sp"
                    android:layout_alignLeft="@+id/leaf_one_ylx"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="27dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/choose_two_ylx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="65dp"
                >
                <ImageView
                    android:id="@+id/leaf_two_ylx"
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/leafylx"
                    android:rotation="45"/>
                <TextView
                    android:id="@+id/left_two_text_ylx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="映射"
                    android:textSize="18sp"
                    android:layout_alignLeft="@+id/leaf_two_ylx"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="27dp"
                    />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/choose_three_ylx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="65dp">
                <ImageView
                    android:id="@+id/leaf_three_ylx"
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/leafylx"
                    android:rotation="45"/>
                <TextView
                    android:id="@+id/left_three_text_ylx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="函数"
                    android:textSize="18sp"
                    android:layout_alignLeft="@+id/leaf_three_ylx"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="27dp"
                    android:textColor="#fff"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/drop_more_menu_ylx"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@mipmap/bottomheadylx"
            android:layout_gravity="center" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A9A9A9"/>
    <ListView
        android:id="@+id/subject_list_ylx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>
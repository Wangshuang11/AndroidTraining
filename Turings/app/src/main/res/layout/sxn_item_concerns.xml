<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/sxn_concern_img"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sxn_concern_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="昵称"
            android:textColor="@color/sxn_normal"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/sxn_concern_motto_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="座右铭"
            android:textColor="@color/sxn_normal"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/sxn_concern_details"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="9"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="@mipmap/sxn_enter"/>
</LinearLayout>
</LinearLayout>
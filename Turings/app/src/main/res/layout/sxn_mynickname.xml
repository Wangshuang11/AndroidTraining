<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sxn_background">
        <Button
            android:id="@+id/sxn_nickname_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/sxn_back">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:text="昵称"
            android:textColor="@color/sxn_un_normal"></TextView>
    </LinearLayout>
    <EditText
        android:id="@+id/sxn_fixedNickname_edit"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"

        android:layout_height="50dp"></EditText>
    <Button
        android:id="@+id/sxn_fixedNickname_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认修改"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/sxn_un_normal"
        android:background="@drawable/sxn_btn"
        android:alpha="0.5"></Button>
</LinearLayout>
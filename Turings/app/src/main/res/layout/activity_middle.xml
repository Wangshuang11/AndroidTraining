<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".near.Location.MiddleActivity">

    <RelativeLayout
        android:id="@+id/rl_lyh"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:background="@color/background_bbb"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">

        <org.turings.turings.near.entity.RoundImageView
            android:id="@+id/ivPortrait_lyh"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/tvFollowName_lyh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPortrait_lyh"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
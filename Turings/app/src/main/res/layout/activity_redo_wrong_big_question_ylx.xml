<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_ylx"
    >
    <LinearLayout
        android:id="@+id/title_ylx"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1AA8D7"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/img_ylx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/backylx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="错题重做"/>
        <ImageView
            android:id="@+id/choose_ylx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/pointylx"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/title_ylx"
        android:layout_above="@+id/btn_choose_ylx"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/subjectImg_ylx"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:scaleType="fitXY"
                android:src="@mipmap/chooseylx" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="412dp"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <EditText
                    android:id="@+id/write_ylx"
                    android:layout_width="match_parent"
                    android:layout_height="254dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入答案内容在这里或者在纸上书写"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/answer_show_ylx"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:background="#808080"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:text="刮刮乐查看答案"
                    android:textColor="#1AA8D7"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/btn_choose_ylx"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pre_question_ylx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1AA8D7"
            android:textColor="#fff"
            android:textSize="24sp"
            android:text="上一题"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>
        <Button
            android:id="@+id/next_question_ylx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1AA8D7"
            android:textColor="#fff"
            android:textSize="24sp"
            android:text="下一题"/>
    </LinearLayout>
</RelativeLayout>
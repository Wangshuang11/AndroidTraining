<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/ivClimbMountain_ws"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="7dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/btnSeeAll_ws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mistakeniconone" />
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="错题本"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivCamera_ws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mistakeniconthree" />
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传错题"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mistakeniconfour" />
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自主组卷"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mistakenicontwo" />
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的回顾"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorMistakenThree"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" >
            <ImageView
                android:id="@+id/ivLeftOneIcon_ws"
                android:layout_width="3dp"
                android:layout_height="21dp"
                android:background="@color/colorBlue"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tvLizhi_ws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知己知彼"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivLeftOneIcon_ws"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/ivLeftTwoIcon_ws"
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:background="@color/colorMistakenFour"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tvInfo_ws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已添加错题 0 道   已组 0 套试卷"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivLeftTwoIcon_ws"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/line_layout_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_animation_vertical"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mistaken.TestResultActivity">
    <LinearLayout
        android:id="@+id/title_ylx"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1AA8D7"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/imgBack_ylx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/backylx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="测试报告"
            android:maxLines="1"
            android:maxLength="10"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorBlue"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleName_ylx"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="卷名"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/yes_num"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="您答对n道题目"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/no_num"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="答错n道题目"
            android:gravity="center"
            android:textColor="@color/btn_logout_normal"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_ylx"
        android:layout_above="@+id/btnFinish_ylx"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/x_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_x"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="20sp"
                        android:text="一、选择题(共2题)"
                        android:textColor="@color/colorBlue"
                        android:textStyle="italic"
                        android:gravity="left|center"/>
                    <ListView
                        android:id="@+id/lvSubX_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#FDF5E6"/>
                <LinearLayout
                    android:id="@+id/t_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_T"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="20sp"
                        android:text="二、填空题(共2题)"
                        android:textColor="@color/colorBlue"
                        android:textStyle="italic"
                        android:gravity="left|center"/>
                    <ListView
                        android:id="@+id/lvSubT_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#FDF5E6"/>
                <LinearLayout
                    android:id="@+id/d_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_D"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="20sp"
                        android:text="三、大题(共2题)"
                        android:textColor="@color/colorBlue"
                        android:textStyle="italic"
                        android:gravity="left|center"/>
                    <ListView
                        android:id="@+id/lvSubD_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
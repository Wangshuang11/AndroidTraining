<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_ylx"
    >
    <LinearLayout
        android:id="@+id/title_ylx"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1AA8D7"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/img_ylx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/backylx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="错题重做"/>
        <ImageView
            android:id="@+id/choose_ylx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/pointylx"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/title_ylx"
        android:layout_above="@+id/btn_choose_ylx"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/subjectImg_ylx"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/chooseylx"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/a_choose_ylx"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/frame_to_answer_edit"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/a_choose_btn_ylx"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF"
                        android:text="A"
                        android:textColor="#1AA8D7"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/a_choose_text_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="1/2"
                        android:textAlignment="center"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_choose_ylx"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/frame_to_answer_edit"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b_choose_btn_ylx"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF"
                        android:text="B"
                        android:textColor="#1AA8D7"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/b_choose_text_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="1/2"
                        android:textAlignment="center"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/c_choose_ylx"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/frame_to_answer_edit"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/c_choose_btn_ylx"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF"
                        android:text="C"
                        android:textColor="#1AA8D7"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/c_choose_text_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="1/2"
                        android:textAlignment="center"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/d_choose_ylx"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/frame_to_answer_edit"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/d_choose_btn_ylx"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF"
                        android:text="D"
                        android:textColor="#1AA8D7"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/d_choose_text_ylx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="1/2"
                        android:textAlignment="center"
                        android:textSize="26sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:background="#000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/answer_show_ylx"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#808080"
                android:text="刮刮乐查看答案"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="#1AA8D7"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/btn_choose_ylx"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pre_question_ylx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1AA8D7"
            android:textColor="#fff"
            android:textSize="24sp"
            android:text="上一题"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>
        <Button
            android:id="@+id/next_question_ylx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1AA8D7"
            android:textColor="#fff"
            android:textSize="24sp"
            android:text="下一题"/>
    </LinearLayout>
</RelativeLayout>
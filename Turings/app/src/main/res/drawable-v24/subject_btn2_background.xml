<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--背景颜色-->
    <solid android:color="#FFFFFF" />
    <!--    边框的颜色和弧度-->
    <stroke
        android:width="1dp"
        android:color="#1AA8D7" />
    <!--     文字与控件的距离-->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!--    弧形的半径-->
    <corners android:radius="20dp"/>
</shape>